<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/ic_background"
    tools:context=".Activities.LoginActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/work" />


            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:buttonTint="@android:color/white"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="@string/hire" />
        </RadioGroup>

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Email"
            android:text="@string/SignEmail"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_color_peter_river"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Gmail"
            android:text="@string/signgmail"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/fbutton_gmail"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_SignUp_Facebook"
            android:text="@string/signfacebook"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:fButtonColor="@color/com_facebook_blue"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            app:shadowColor="@android:color/black"
            />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linerar1"
        android:layout_above="@+id/linerar2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/txt_SignIn"/>
        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_skip"
            android:text="@string/skip"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linerar2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/terms"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_terms"
            android:text="@string/temscondition"
            android:textStyle="bold"
            android:textColor="@color/fbutton_color_peter_river"
            />
    </LinearLayout>

</RelativeLayout>