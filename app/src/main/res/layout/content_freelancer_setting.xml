<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Freelancer.Activities.FreelancerSettingActivity"
    tools:showIn="@layout/app_bar_freelancer_setting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Settings"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/txt_manageCashAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Cash Account"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/txt_transaction_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction Fee"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/txt_add_payment_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add/Edit Payment Method"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/txt_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/txt_aboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/txt_terms_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

